(defvar dock_hovered false)
(defwidget dock_button [class tooltip onclick] (eventbox
    :class "laucher ${class}"
    :tooltip tooltip
    :onclick onclick
    :onhoverlost "${EWW_CMD} update dock_hovered=false"
    :onhover "${EWW_CMD} update dock_hovered=true"
    :valign "END"
    (box
        :orientation "v"
        :space-evenly false
        (box
            :class "icon"
            :valign "START"
            :vexpand true
        )
        (box
            :class "indicator"
            :valign "END"
            :halign "CENTER"
        )
    )
))

(defvar dock_reveal true)
(defwidget dock [] (eventbox
    :class "dock"
    :onhover "${EWW_CMD} update dock_reveal=true"
    :onhoverlost "${EWW_CMD} update dock_reveal=false"
    (revealer
        :reveal {dock_reveal || workspaces.active_empty}
        :transition "slideup"
        :duration "300ms"
        (overlay
            (button
                :class "container ${dock_hovered ? "hovered" : ""}"
            )
            (box
                :class "foot"
                :valign "END"
            )
            (box
                :halign "CENTER"
                :valign "END"
                :spacing 20
                :space-evenly false
                (dock_button 
                    :class "firefox"
                    :tooltip "Firefox"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher firefox"
                )
                (dock_button 
                    :class "discord"
                    :tooltip "Discord"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher discord"
                )
                (dock_button 
                    :class "terminal"
                    :tooltip "Terminal"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher terminal"
                )
                (dock_button 
                    :class "file-manager"
                    :tooltip "Thunar"  
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher file-manager"
                )
                (dock_button 
                    :class "editor"
                    :tooltip "Editor"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher editor"
                )
                (dock_button 
                    :class "music"
                    :tooltip "Sonixd"  
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher music"
                )
                (dock_button 
                    :class "steam"
                    :tooltip "Steam"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher steam"
                )
                (dock_button 
                    :class "lutris"
                    :tooltip "Lutris"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher lutris"
                )
                (dock_button 
                    :class "heroic-launcher"
                    :tooltip "Epic and GOG launcher"
                    :onclick "${EWW_CONFIG_DIR}/scripts/launcher heroic-launcher"
                )
            )
        )
    )
))
